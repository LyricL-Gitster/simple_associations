<div class="span12">
	<div class="well well-large">
		<p id="notice"><%= notice %></p>

		<p>
		  <b>Customer Name:</b>
		  <%= @order.customer.name %>
		</p>

		<p>
		  <b>Item Name:</b>
		  <%= @order.item.name %>
		</p>

		<p>
		  <b>Item Cost:</b>
		  <%= number_to_currency(@order.item.cost, :unit => "$") %>
		</p>

		<p>
		  <b>Quantity:</b>
		  <%= @order.quantity %>
		</p>

		<p>
		  <b>Total Cost:</b>
		  <%= @order.total_cost %>
		</p>


		<%= link_to 'Edit', edit_customer_order_path(@order.customer,@order) %> |
		<%= link_to 'Back', landing_page_path %>
	</div>
</div>